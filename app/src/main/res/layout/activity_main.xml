<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.dta_android_calculatrice.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_affiche_resultat"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tv_stack_quatre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_dark"
            android:text="@string/tv_stack_quatre"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="6dp"
            tools:layout_editor_absoluteY="2dp" />

        <TextView
            android:id="@+id/tv_stack_trois"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_dark"
            android:text="@string/tv_stack_trois"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="34dp" />

        <TextView
            android:id="@+id/tv_stack_deux"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_dark"
            android:text="@string/tv_stack_deux"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="66dp" />

        <TextView
            android:id="@+id/tv_stack_un"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.19"
            android:background="@android:color/holo_orange_dark"
            android:text="@string/tv_stack_un"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="65dp"
            tools:layout_editor_absoluteY="93dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_affiche_resultat"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginBottom="69dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/darker_gray"
        android:text="@string/tv_affiche_resultat"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/button_un"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/btn_un"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/button_deux"
            tools:layout_editor_absoluteY="204dp" />

        <Button
            android:id="@+id/button_deux"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/btn_deux"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="204dp" />

        <Button
            android:id="@+id/button_trois"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/btn_trois"
            app:layout_constraintLeft_toRightOf="@+id/button_deux"
            tools:layout_editor_absoluteY="204dp" />

        <Button
            android:id="@+id/button_plus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_green_dark"
            android:onClick="onClick"
            android:text="@string/btn_plus"
            app:layout_constraintLeft_toRightOf="@+id/button_trois"
            tools:layout_editor_absoluteY="204dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/button_sept"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/btn_sept"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_quatre" />

        <Button
            android:id="@+id/button_neuf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/btn_neuf"
            app:layout_constraintLeft_toRightOf="@+id/button_huit"
            app:layout_constraintTop_toBottomOf="@+id/button_six" />

        <Button
            android:id="@+id/button_huit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/btn_huit"
            app:layout_constraintLeft_toRightOf="@+id/button_sept"
            app:layout_constraintTop_toBottomOf="@+id/button_cinq" />

        <Button
            android:id="@+id/button_diviser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_green_dark"
            android:onClick="onClick"
            android:text="@string/btn_diviser"
            app:layout_constraintHorizontal_bias="0.206"
            app:layout_constraintLeft_toRightOf="@+id/button_neuf"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_moins" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/button_clear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_green_dark"
            android:onClick="onClick"
            android:text="CLEAR" />

        <Button
            android:id="@+id/button_pop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_green_dark"
            android:onClick="onClick"
            android:text="POP" />

        <Button
            android:id="@+id/button_swap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_green_dark"
            android:onClick="onClick"
            android:text="SWAP" />

        <Button
            android:id="@+id/button_enter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_red_dark"
            android:onClick="onClick"
            android:text="ENTER" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/button_quatre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/btn_quatre"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/button_cinq"
            app:layout_constraintTop_toBottomOf="@+id/button_un" />

        <Button
            android:id="@+id/button_cinq"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/btn_cinq"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="290dp" />

        <Button
            android:id="@+id/button_six"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/btn_six"
            app:layout_constraintLeft_toRightOf="@+id/button_cinq"
            tools:layout_editor_absoluteY="290dp" />

        <Button
            android:id="@+id/button_moins"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_green_dark"
            android:onClick="onClick"
            android:text="@string/btn_moins"
            app:layout_constraintLeft_toRightOf="@+id/button_six"
            tools:layout_editor_absoluteY="290dp" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
