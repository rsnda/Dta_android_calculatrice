<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.dta_android_calculatrice.MainActivity">

    <Button
        android:id="@+id/button_un"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="Button"
        tools:layout_editor_absoluteY="196dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_deux"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/button_quatre"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="Button"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_un"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button_sept"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="Button"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_quatre"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button_huit"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="Button"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_cinq"
        app:layout_constraintLeft_toRightOf="@+id/button_sept"
        android:layout_marginLeft="10dp" />

    <Button
        android:id="@+id/button_neuf"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="Button"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_six"
        app:layout_constraintLeft_toRightOf="@+id/button_huit"
        android:layout_marginLeft="12dp" />

    <Button
        android:id="@+id/button12"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="Button"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_moins"
        app:layout_constraintLeft_toRightOf="@+id/button_neuf"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/button_cinq"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="Button"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_deux"
        app:layout_constraintLeft_toRightOf="@+id/button_quatre"
        android:layout_marginLeft="10dp" />

    <Button
        android:id="@+id/button_six"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="Button"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_trois"
        app:layout_constraintLeft_toRightOf="@+id/button_cinq"
        android:layout_marginLeft="12dp" />

    <Button
        android:id="@+id/button_moins"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="Button"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_plus"
        app:layout_constraintLeft_toRightOf="@+id/button_six"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/button_deux"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="Button"
        tools:layout_editor_absoluteY="196dp"
        tools:layout_editor_absoluteX="98dp" />

    <Button
        android:id="@+id/button_trois"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="Button"
        tools:layout_editor_absoluteY="196dp"
        app:layout_constraintLeft_toRightOf="@+id/button_deux"
        android:layout_marginLeft="12dp" />

    <Button
        android:id="@+id/button_plus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="Button"
        tools:layout_editor_absoluteY="196dp"
        app:layout_constraintLeft_toRightOf="@+id/button_trois"
        android:layout_marginLeft="8dp" />
</android.support.constraint.ConstraintLayout>
